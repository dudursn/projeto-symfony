<!DOCTYPE html>
<html lang="en">

    <head>
        <meta charset="utf-8">
        <title>{% block title %} {% endblock %} - SindSaude GO</title>
        <link rel="shortcut icon" href="{{ asset('img/favicon.png') }}" type="image/x-icon" />

        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <meta name="description" content="">
        <meta name="author" content="">

        {% block stylesheets %}
            <link href="{{ asset('css/fontawesome/css/all.min.css') }}" rel="stylesheet" />
            <link href="{{ asset('js/datepicker/datepicker.min.css') }}" rel="stylesheet" />
            <link href="{{ asset('css/sb-admin-2.min.css') }}" rel="stylesheet" />
            <link href="{{ asset('css/style.css') }}" rel="stylesheet" />
        {% endblock %}
    </head>
    
    <body class="bg-gradient-#333333">

        <div class="container">

            <!-- Outer Row -->
            <div class="row justify-content-center">

                <div class="col-xl-10 col-lg-12 col-md-9">

                    <div class="card o-hidden border-0 shadow-lg my-5">
                        <div class="card-body p-0">
                            <div class="row">
                                <div class="col-lg-6 d-none d-lg-block bg-login-image"></div>
                                <div class="col-lg-6">
                                    <div class="p-5">
                                        <div class="text-center">
                                            <h1 class="h4 text-gray-900 mb-4">{{ block('title') }}</h1>
                                        </div>
                                        <!--   Flash Messages   -->
                                        <div class="row">
                                            <div class="col-lg-12">
                                                {% include '_base/flash_messages.html.twig' %}
                                            </div>
                                        </div>
                                        {% block body %}{% endblock %}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <footer class="text-center" style="margin-bottom: 50px;">
                        <a href="http://www.sindsaude.com.br/" title="Acese nosso site">
                            <img class="img-fluid" src="{{ asset('img/logo_vermelha.png') }}" style="padding: 5px; background-color: #FFF; height: 40px;"/>
                        </a>
                    </footer>
                </div>
            </div>
        </div>

        <!-- Bootstrap core JavaScript-->
        <script src="vendor/jquery/jquery.min.js"></script>
        <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

        <!-- Core plugin JavaScript-->
        <script src="vendor/jquery-easing/jquery.easing.min.js"></script>

        <!-- Custom scripts for all pages-->
        <script src="js/sb-admin-2.min.js"></script>
        
        <script src="{{ asset('js/datepicker/datepicker.min.js') }}"></script>
        <script src="{{ asset('js/datepicker/datepicker.pt-BR.js') }}"></script>
        <script src="{{ asset('js/jquery.maskMoney.min.js') }}"></script>
        <script src="{{ asset('js/jquery.maskedinput.min.js') }}"></script>

        <script src="{{ asset('js/custom.js') }}"></script>

    </body>
</html>
